@model IEnumerable<BusinessLayer.ViewModels.PerfumeViewModel>
@{
    Layout = "_Layout";
}
<div class="container">
    <div class="row">
        <div class="col-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-light p-3">
                    <li class="breadcrumb-item"><a href="~/Admin/Index">Admin Page</a></li>
                    <li class="breadcrumb-item active">Perfumes</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <a href="~/Perfume/PerfumeForm" class="btn btn-primary">Add New</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Brand</th>
                        <th scope="col">Price</th>
                        <th scope="col">Volume</th>
                        <th scope="col">Id</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var perfume in Model)
                    {
                        <tr>
                            <td>@perfume.Name</td>
                            <td>@perfume.Brand.Name</td>
                            <td>@perfume.Price</td>
                            <td>@perfume.Volume</td>
                            <td>@perfume.Id</td>
                            <td></td>
                            <td></td>
                            <td>
                                <form method="get">
                                    <input type="hidden" name="Id" value="@perfume.Id" />
                                    <input class="btn btn-warning" type="submit" value="Edit" formaction="~/Perfume/PerfumeForm" />
                                </form>
                            </td>
                            <td>
                                <form method="post">
                                    <input type="hidden" name="Id" value="@perfume.Id" />
                                    <input class="btn btn-danger" type="submit" value="Delete" formaction="~/Perfume/DeletePerfume" />
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

